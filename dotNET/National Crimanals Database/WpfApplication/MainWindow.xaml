<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Button Content="Choose connection" Margin="2" Click="ChooseConnectionClick"/>
        <Button Content="Sql command" Margin="2" Click="SqlCommandClick"/>
        <Button Content="LINQ to SQL" Margin="2" Click="LinqToSqlClick"/>
        <Button Content="Test LINQ to SQL using SQL Compact" Margin="2" Click="LinqToSqlTestCe"/>
    </StackPanel>
</Window>
